  <body>
                   <!-- Navigation bar -->
      <div class="topnav" id="myTopnav">
             <a class="navbar-brand" href="index.html">Home</a>
             <a href="/user-sign-in">User Sign In</a>
             <a href="/admin-sign-in">Admin</a>
             <a href="javascript:void(0);" class="icon" onclick="myFunction()">&#9776;</a>
      </div>
      

<h1>Adding a administrator</h1>
<form id="addAdmin" action="/admin" method="post">
	<label for="admin_email">Email:</label>
	<input type="email" id="admin_email" name="admin_email"/>
	<br>
	<label for="admin_password">Password:</label>
	<input type="text" id="admin_password" name="admin_password"/>
	<br>
	<input type="submit" value="Submit">
</form>
<br>

<h1>Current Administrators:</h1>
<table>
	<thead>
		<th>Email</th>
	</thead>
	<tbody>
		{{#each Admins}}
		<tr>
			<td>{{admin_email}}</td>
			<td><button onclick="deleteAdmin({{admin_id}})">Delete</button></td>
			<td><a href="/admin/{{admin_id}}">Update</a></td>
		</tr>
		{{/each}}
	</tbody>
</table>
</body>
</html>
