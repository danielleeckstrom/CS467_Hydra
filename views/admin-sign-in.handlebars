<div id="user-sign-in-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3" align="left">
		<h3>Welcome to the Admin sign in page!</h3>
		<p><i>To access your profile, enter your email and password below.</i></p>
                <form class="sign-in-form" action="/admin-sign-in" method="POST">
                    <div class="form-fields-container">
                        <label for="sign-in-email" name="txt">Email: </label>
                        <input id="sign-in-email" type="text" name="admin_email" placeholder="Enter your email here....">
                    </div>
                    <div class="form-fields-container">
                        <label for="sign-in-password" name="txt">Password: </label>
                        <input id="sign-in-password" type="password" name="admin_password" placeholder="Enter password ....">
                    </div>
                    <div class="form-fields-container">
                        <button class="btn user-login-btn" type="submit">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

