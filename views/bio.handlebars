<h1>Users sorted:</h1>
<table>
	<thead>
		<th>First Name</th>
		<th>Last Name</th>
	</thead>
	<tbody>
		{{#each Users}}
		<tr>
			<td>{{fname}}</td>
			<td>{{lname}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>

<h1>Top 5 number of award given by year:</h1>
<table>
	<thead>
		<th>Count</th>
		<th>Year</th>
	</thead>
	<tbody>
		{{#each Awards}}
		<tr>
			<td>{{Count}}</td>
			<td>{{Year}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<canvas id="chart_1" width="400" height="400" onloadeddata="chart()"></canvas>
<h1>user sorted by year:</h1>
<table>
	<thead>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Year</th>
	</thead>
	<tbody>
		{{#each Users_y}}
		<tr>
			<td>{{First_Name}}</td>
			<td>{{Last_Name}}</td>
			<td>{{Year}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"><{{!}}/script>
<script>
function chart() {
	var labels = [];
	var data = [];
	{{#each Awards}}
		labels.push({{Year}});
		data.push({{Count}});
	{{/each}}
	var chart_1 = document.getElementById('chart_1');
	var chart = new Chart(chart_1, {
		type: 'bar',
		data: {
			labels: labels,
			datasets: [{
				data: data,
				backgroundColor: [
				    'rgba(255, 99, 132, 0.2)',
				    'rgba(54, 162, 235, 0.2)',
				    'rgba(255, 206, 86, 0.2)',
				    'rgba(75, 192, 192, 0.2)',
				    'rgba(153, 102, 255, 0.2)',
				    'rgba(255, 159, 64, 0.2)'
				],
				borderColor: [
				    'rgba(255,99,132,1)',
				    'rgba(54, 162, 235, 1)',
				    'rgba(255, 206, 86, 1)',
				    'rgba(75, 192, 192, 1)',
				    'rgba(153, 102, 255, 1)',
				    'rgba(255, 159, 64, 1)'
				],
				borderWidth: 1
			}]
		},
			options: {
					scales: {
							yAxes: [{
									ticks: {
											beginAtZero: true,
											stepSize: 1,
											min: 0
									}
							}]
					}
			}
	});
}
window.onload = chart;
<{{!}}/script>
