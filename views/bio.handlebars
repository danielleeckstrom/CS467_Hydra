<h1>Top 5 users who awarded most award:</h1>
<table>
	<thead>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Count</th>
	</thead>
	<tbody>
		{{#each Users}}
		<tr>
			<td>{{fname}}</td>
			<td>{{lname}}</td>
			<td>{{count}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>

<canvas id="chart_2" width="40" height="40" onloadeddata="chart2()"></canvas>
<h1>Top 5 number of award given by year:</h1>
<table>
	<thead>
		<th>Count</th>
		<th>Year</th>
	</thead>
	<tbody>
		{{#each Awards}}
		<tr>
			<td>{{Count}}</td>
			<td>{{Year}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>
<canvas id="chart_1" width="40" height="40" onloadeddata="chart1()"></canvas>
